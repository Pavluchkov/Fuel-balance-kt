<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/textView2"
            android:text="Топливный калькулятор"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Предыдущие показания:"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:id="@+id/textView7"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/editText"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Текущие показания:"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/textView8"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/editText3"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:text="Трасса:"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/textView9"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/editText5"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="Частые технологические:"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/textView10"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/editText4"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView8" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintStart_toEndOf="@+id/textView10" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText5"
            android:padding="16dp" app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText4"/>


</android.support.constraint.ConstraintLayout>